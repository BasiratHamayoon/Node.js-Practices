<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    
    <!-- Inline CSS for Page Styling -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 1100px;
            margin: 20px auto;
            padding: 20px;
            background: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        .section-title {
            text-align: center;
            color: #333;
            font-size: 20px;
        }
        .product-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .product-card {
            background: white;
            padding: 8px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 220px;
            transition: transform 0.2s;
        }
        .product-card:hover {
            transform: scale(1.05);
        }
        .product-card img {
            width: 90%;
            height: 250px;
            border-radius: 5px;
        }
        .product-title {
            font-size: 18px;
            color: #333;
        }
        .product-price {
            font-size: 16px;
            color: #666;
        }
        .add-to-cart {
            background: #28a745;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            margin-top: 10px;
            width: 100%;
        }
        .add-to-cart:hover {
            background: #218838;
        }
    </style>
</head>
<body>

    <%- include('header') %> <!-- Including the header -->

    <main class="container">
        <h2 class="section-title">Featured Products</h2>
        <div class="product-container">
            <% productItems.forEach(item => { %>
                <div class="product-card">
                    <img src="<%= item.img %>" alt="<%= item.title %>">
                    <h3 class="product-title"><%= item.title %></h3>
                    <p class="product-price">Price: $<%= item.price.toFixed(2) %></p>
                    <button class="add-to-cart">Add to Cart</button>
                </div>
            <% }); %>
        </div>
    </main>

</body>
</html>
